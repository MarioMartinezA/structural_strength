double mean(double ary[], int n)
{

}//END MEAN


//*******************************************
double stdDev(double ary[], int n)
{
    double variance = var(double ary[], int n);
    return = sqrt(variance);

}//END STANDARD DEVIATION


//*******************************************
double variance(int ary[], int numberElement)
{
    double mean1 = mean(ary, numberElement);
    double top = 0, total, x;
    for(int ix = 0; ix < numberElement; ix++)
    {
        x = pow((ary[ix] - mean1), 2);
        top += x;

    }
    total = top / numberElement;
    
    return total;
}


//*******************************************
void avgMagnitude(double a[], int n)
{
    double sum = 0, totalVal = 0;
    int i = 0;
    for(i; i < n; i++)
    {
        sum += fabs(a[i]);
    
    }
    totalVal = sum/i;
    cout << totalVal << endl;
}
void avgPower(double a[], int n)
{
    double sum = 0, totalVal = 0;
    int i = 0;
    for(i; i < n; i++)
    {
        sum += pow(a[i], 2);
    
    }
    totalVal = sum/i;
    cout << totalVal << endl;
}

